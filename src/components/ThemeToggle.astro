  data-theme-toggle
  class={`inline-flex ${sizeClass} items-center justify-center rounded-full border border-sky-200 bg-white/95 text-sky-700 shadow-sm transition hover:bg-sky-50 dark:border-slate-700 dark:bg-slate-900/95 dark:text-amber-300 dark:hover:bg-slate-800 ${className}`}
